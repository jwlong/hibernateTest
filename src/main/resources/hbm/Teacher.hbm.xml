<?xml version="1.0" encoding="gb2312"?>
<!-- 指定Hiberante3映射文件的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- hibernate-mapping是映射文件的根元素 -->
<hibernate-mapping package="com.dxfjyygy.domain">
    <!-- 每个class元素对应一个持久化对象 -->
    <class name="Teacher" table="teacher_table">
        <!-- id元素定义持久化类的标识属性 -->
        <id name="id">
            <generator class="native"/>
        </id>
        <!-- property元素定义常规属性 -->
        <property name="name" column="t_name" not-null="true"/>
        <property name="age"/>
        <list name="students" table="t_student">
                <key column="fk_teacher_id" not-null="true"/>
                <list-index column="list_order" />
                <!--<element type="Student" >-->
                <!--</element>-->
                <!--<one-to-many class="Student"></one-to-many>-->
        </list>

    </class>
</hibernate-mapping>